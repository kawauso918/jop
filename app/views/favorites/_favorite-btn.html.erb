<% if photo_image.favorited_by?(current_user) %>
    <%= link_to photo_image.favorites.count, photo_image_favorites_path(photo_image), method: :delete, remote: true, class: "fas fa-heart heart_red"  %>
<% else %>
    <%= link_to photo_image.favorites.count, photo_image_favorites_path(photo_image), method: :post, remote: true, class: "fas fa-heart heart_blue" %>
 <% end %>