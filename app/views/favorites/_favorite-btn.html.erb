<% if photo_image.favorited_by?(current_user) %>
    <%= link_to "いいね", photo_image_favorites_path(photo_image), method: :delete, remote: true, class: "fas fa-heart heart_red" %>
    <%= photo_image.favorites.count %>
<% else %>
    <%= link_to "いいね!" , photo_image_favorites_path(photo_image), method: :post, remote: true, class:  "fas fa-heart heart_blue" %>
    <%= photo_image.favorites.count %>
 <% end %>