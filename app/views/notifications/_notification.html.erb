<% visitor = notification.visitor %>
<% photo_image = notification.photo_image %>

<ul>
  <li>
    <%= attachment_image_tag photo_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
    <%= link_to user_path(visitor) do %>
    <strong>
      <%=visitor.name %>
    <% end %>
    </strong>さんが
    <strong>
      <%= link_to photo_image_path(notification.photo_image_id) do %>
        <%= photo_image.name.truncate(20)%>
      <% end %>
    </strong>に通知しました。
    <%= " (#{time_ago_in_words(notification.created_at)} 前)" %>
  </li>
</ul>