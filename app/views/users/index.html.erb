<div class="container">
  <div style="text-align: right;">
      <%= search_form_for @q, url: search_users_path do |f| %>
        <%= f.search_field :name_cont, placeholder: "ユーザー検索はここへ" %>
        <%= f.submit '検索' %>
      <% end %>
  </div>
</div>

<div class="container">
  <div style="text-align: center;">
    <table class='table table-hover table-inverse'>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", class: "rounded-circle" %></td>
            <td><strong><%= user.name %></strong></td>
            <td><%= render "follows/btn", user: user %></td>
            <td><%= link_to 'Show', user_path(user), class: "btn btn-sm btn-success" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


