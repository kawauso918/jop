
<% if @user.errors.any? %>
  <div class="error_explanation">
    <h2><%= @user.errors.count %>件のエラーが発生しました</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">プロフィール編集</h5>
      <div class="form-body p-4">
        <%= form_with model:@user, local:true do |f| %>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
          <div class="input-group mb-3 mt-4">
            <div class="input-group-prepend">
              <span class="input-group-text" aria-hidden="true"><i class="far fa-user"></i></span>
            </div>
              <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
          </div>
          <hr>
              <%= f.submit "変更を保存", class: "btn btn-lg btn-block btn-info mt-4" %>
          <% end %>
      </div>
    </div>
  </div>
</div>