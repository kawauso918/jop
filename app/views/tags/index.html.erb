<div class="container">
  <div style= "text-align: center;">
    <h2><i class="fas fa-tag"></i>タグ付け一覧</h2>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="btn-wrapper col-5 mx-auto">
      <ul>
        <% @tags.each do |tag| %>
          <li class= "tag">
            <%= link_to tag_path(tag.id) do %>
              <%= tag.photo_images.count %>
              <%= tag.name %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>