<div class="container">
  <div style= "text-align: left;">
    <h1><i class="fas fa-tag"></i>タグ詳細</h1>
    <%= link_to 'Tags List', tags_path, class: "btn btn-sm btn-success" %>
    <%= link_to 'Delete', tag_path(@tag), class: "btn btn-sm btn-danger", method: :delete, data: {confirm: '関連づいた記事のタグが空になりますがタグを削除しますか？'} %>
    <h3>タグ名：<%= @tag.name %></h3>
    <ul>
      <% @tag.photo_images.each do |photo_image| %>
        <li>
          <%= link_to  photo_image_path(photo_image) do %>
           <%= attachment_image_tag photo_image, :image, :fill, 100, 100,fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
          <% photo_image.name %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>