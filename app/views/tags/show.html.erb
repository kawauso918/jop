<div class="container">
  <div style= "text-align: left;">
    <h2 class="tag-name"><i class="fas fa-tag"></i>タグ付け詳細</h2>
    <i class="fas fa-tags"></i><%= link_to 'Tags List', tags_path, class: "btn btn-sm btn-success" %>
    <i class="fas fa-trash-alt"></i><%= link_to 'Delete', tag_path(@tag), class: "btn btn-sm btn-danger", method: :delete, data: {confirm: '関連づいた記事のタグが空になりますがタグを削除しますか？'} %>
  </div>
</div>
<div class="container">
  <div class= "row">
      <% @tag.photo_images.each do |photo_image| %>
      <div class="col-lg-3 col-md-6 mb-4">
          <%= link_to  photo_image_path(photo_image) do %>
           <%= attachment_image_tag photo_image, :image, :fill, 100, 100, fallback: "no_image.jpg", class:"mt-3 rounded-circle" %>
          <% photo_image.name %>
      </div>
          <% end %>
      <% end %>
  </div>
</div>