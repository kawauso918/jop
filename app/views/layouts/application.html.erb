<!DOCTYPE html>
<html>
  <head>
    <title>Photo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "jop", root_path, class: "navbar-brand" %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
              <ul class="navbar-nav ml-auto">
                <% if user_signed_in? %>
                  <li>
                    <i class="fas fa-users"></i>
                    <%= link_to "ユーザー一覧", users_path, class: "navbar-brand" %>
                  </li>
                  <li>
                    <i class="fas fa-photo-video"></i>
                    <%= link_to "投稿一覧", photo_images_path, class: "navbar-brand" %>
                  </li>
                  <li>
                    <i class="fas fa-camera"></i>
                    <%= link_to '投稿フォーム',  new_photo_image_path, class: "navbar-brand" %>
                  </li>
                  <li>
                    <i class="fas fa-user-alt"></i>
                    <%= link_to "プロフィール", user_path(current_user.id), class: "navbar-brand" %>
                  </li>
                  <li>
                    <i class="fas fa-running"></i>
                    <%= link_to "ログアウト", destroy_user_session_path, class: "navbar-brand", method: :delete %>
                  </li>
                <% else %>
                  <li>
                    <i class="fas fa-sign-in-alt"></i>
                    <%= link_to "新規登録", new_user_registration_path, class: "navbar-brand" %>
                  </li>
                  <li>
                    <i class="fas fa-sign-in-alt"></i>
                    <%= link_to "ログイン", new_user_session_path, class: "navbar-brand" %>
                  </li>
                <% end %>
              </ul>
            </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>

     <footer>
      <div class='container mt-5'>
        <div class='row'>
          <div class='mx-auto'>
            <div class="social">
              <i class="fas fa-camera-retro"></i><p>写真で繋がるSNS</p>
            </div>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
